<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mojBrojPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/leftUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/leftAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/leftPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/rightPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/rightAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="00:00"/>

    </RelativeLayout>

    <Button
        android:id="@+id/generateNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Generisi broj" />

    <EditText
        android:id="@+id/showNumberField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:padding="16dp"
        android:text="123"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/numbersMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="1" />

        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="2" />

        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="3" />

        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numbersMenuDigits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="5" />

        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="6" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/mathOperationsMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="4"
        android:padding="15dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/plusButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="+"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="-"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="*"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="/"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/openBracketButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="("
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/closeBracketButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text=")"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="C"
            android:textSize="24sp"
            />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:text="E"
            android:textSize="24sp"
            />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="10dp">

        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_columnWeight="8"
            android:layout_gravity="fill_vertical"
            android:text=""/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_columnWeight="2"
            android:layout_gravity="fill_vertical"
            android:text=""
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_columnWeight="9"
            android:layout_gravity="fill_vertical"
            android:text=""/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_vertical"
            android:text=""
            android:textColor="@color/white"/>

    </GridLayout>




</LinearLayout>